      %br/
      .inner-page
        %h2.page-headline.large= t('landing.explorer_title')
      .row-fluid.inner-page
        .span6.pull-right
          = image_tag("explorer.jpg", :class=> 'pull-right')
        .span6.pull-right
          = t('landing.explorer_text')
          %br/
          %br/
          %a.btn.btn-centered{href: "http://101companies.org/resources?format=html", title: "Read the wiki"}
