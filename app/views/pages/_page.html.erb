<div id="renameModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Rename Page</h3>
  </div>
  <div class="modal-body">
    <div class="modal-body">
      <p>New title:</p>
      <input id="newTitle" name="newTitle" value="<%= @page.full_title %>" type="text">
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" id='renamePageButton'>Save changes</button>
  </div>
</div>


<div id='contentTop'>
  <% if can? :edit, @page %>
  <div id='topEditBar' class='editBar'>
    <div class="btn-toolbar notEditing" style="display: block;">
      <div class="btn-group">
        <a href='<%= edit_page_path(@page.full_title) %>' class="editbutton  btn btn-small" id="pageEditButton">
          <i class="icon-pencil"></i>
          <strong class="editbuttontext"> Edit</strong>
        </a>
        <a href='#renameModal' data-toggle="modal" class="editbutton  btn btn-small" id="pageRenameButton">
          <i class="icon-share-alt"></i>
          <strong class="editbuttontext"> Rename</strong>
        </a>
        <button class="editbutton  btn btn-small" disabled id="pageDeleteButton">
          <i class="icon-trash"></i><strong> Delete</strong>
        </button>
        <button class="editbutton  btn btn-small" disabled id="sectionAddButton">
          <i class="icon-plus"></i><strong> Add Section</strong>
        </button>
      </div>
     </div>
  </div>
  <% end %>

  <div id="title">
    <h1><%= @page.title.sub '@', '101' %></h1>
  </div>

</div>

<div id='sections'>
  <%= @page.html_content.html_safe %>

  <div class='section' id='metasection'>
    <div class='headlinecontainer'>
      <h2 class='headline'>Metadata</h2>
    </div>

    <div class='section-content-container'>
      <div class='section-content'>
        <div class='section-content-parsed'>
          <% @rdf.each do |triple| %>
            <div class='triple'>
              <% if triple[:direction] == 'OUT' %>
                <div class='arrow'>
                  ◀
                </div>
                <div class='subject label'>
                  this
                </div>
                <div class='predicate'>
                  <%= triple[:predicate] %>
                </div>
                <div class="object label">
                  <a href="wiki/../<%= triple[:node] %>">
                    <%= triple[:node] %>
                  </a>
                </div>
              <% else %>
                <div class='arrow'>
                  ◀
                </div>
                <div class='subject label'>
                  <a href="wiki/../<%= triple[:node] %>">
                    <%= triple[:node] %>
                  </a>
                </div>
                <div class='predicate'>
                  <%= triple[:predicate] %>
                </div>
                <div class="object label">
                  this
                </div>
              <% end %>
              <br>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>

<div class='additional-section'>
  <div class="section" id="backlinks" style="display: block;">
     <h2>Backlinks</h2>

     <div class='backlinks-body'>
       <% @page.backlinks.map do |link| %>
         <a href="<%= '/wiki/' + link.sub(' ', '_') %>">
           <span class="label">
             <%= link %>
           </span>
         </a>
       <% end %>
     </div>

  </div>
</div>

<script type='text/javascript'>
$(document).ready(function() {
  $('#renamePageButton').click(function() {
    $.ajax({
      url: '<%= rename_page_path(@page.full_title) %>',
      type: 'PUT',
      data: {
        newTitle: $('#newTitle').val()
      }
    }).done(function(data) {
      window.location.pathname = '/wiki/' + data.newTitle;
    })
  });
});
</script>
