<div class="panel panel-default">
  <div class="panel-body">
    <form class='form form-horizontal' action='/search'>
      <div class='form-group'>
        <label for="namespace" class="col-sm-2 control-label">Namespace</label>
        <div class='col-sm-10'>
          <%= select("namespace", "name", Page.order('namespace').pluck('distinct trim(namespace) as namespace'), { include_blank: true, selected: params.dig(:namespace, :name) }, { class: 'form-control' }) %>
        </div>
      </div>
      <div class='form-group'>
        <label for="q" class="col-sm-2 control-label">Search</label>
        <div class='col-sm-10'>
          <%= text_field_tag(:q, @query_string, placeholder: 'Search', class: 'form-control') %>
        </div>
      </div>
      <div class='form-group'>
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label>
              <%= check_box_tag('title_only', '1', @title_only) %>  Title only
            </label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Search</button>
        </div>
      </div>
    </form>
  </div>
</div>


<div id='search-results'>

  <% @search_results.group_by(&:namespace).each do |name, pages| %>
    <h3><%= name %></h3>
    <ul>
      <% pages.each do |page| %>
        <li class='search-result'>
          <a href='<%= page_path(page.url) %>'><%= page.title %></a>
        </li>
      <% end %>
    </ul>
  <% end %>

</div>
