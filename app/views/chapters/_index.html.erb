<table class='table'>
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>Content</th>
      <th>Check sum</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.url %></td>
        <td><%= chapter.title %></td>
        <td><%= chapter.content %></td>
        <td><%= chapter.check_sum %></td>
        <td><%= chapter.book %></td>
        <td><%= link_to 'Show', chapter %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Destroy', chapter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

