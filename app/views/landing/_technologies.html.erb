<div class='row' style="margin-top: 100px;">
  <div class='col-md-6'>
    <div class='tag-cloud'></div>
  </div>

  <div class='col-md-6'>

  </div>

  <div class='col-md-3'>
    <h2 class='category-title'>Popular</h2>
    <% @popular_technology_pages.each do |page| %>
      <div class='page-preview'>
        <h2>
          <%= link_to(page.full_title, page_path(page.full_title))  %>
        </h2>

        <div class='content'>
          <%= cache(page) do %>
            <%= raw page.preview %>
          <% end %>
        </div>
      </div>
      <hr />
    <% end %>
  </div>
  <div class='col-md-3'>
    <h2 class='category-title'>Recent</h2>
    <% @recent_technology_pages.each do |page| %>
      <div class='page-preview'>
        <h2>
          <%= link_to(page.full_title, page_path(page.full_title))  %>
        </h2>

        <div class='content'>
          <%= cache(page) do %>
            <%= raw page.preview %>
          <% end %>
        </div>
      </div>
      <hr />
    <% end %>
  </div>
</div>


<script>
  var data = <%= raw @technologies.to_json %>

  $(document).ready(function() {
    var width = window.innerWidth / 2;
    var height = window.innerHeight - 120;

    var word_numbers = $.map(data, function(x) {
      return x;
    });

    var word_number = word_numbers.reduce(function(x, y) {
      return x + y;
    });

    var words = $.map(data, function(_, x) {
      return x;
    });
    console.log(word_numbers);

    var step = Math.max.apply(null, word_numbers) / 6;

    var fill = d3.scale.category20();

    d3.layout.cloud().size([width, height])
    .words(words.map(function(d) {
      var factor = 10;
      var count = data[d];
      var css = count / step;
      factor += css * 30;

      if(factor > 80) {
        factor = 80;
      }

      return {text: d, size: factor};
    }))
    .rotate(function() { return ~~(Math.random() * 2) * 90; })
    .font("Impact")
    .fontSize(function(d) { return d.size; })
    .on("end", draw)
    .start();

    function draw(words) {
      d3.selectAll(".tag-cloud").append("svg")
      .attr("width", width)
      .attr("height", height)
      .append("g")
      .attr("transform", "translate(" + width/2 + "," + height/2 + ")")
      .selectAll("text")
      .data(words)
      .enter().append("text")
      .attr("text-anchor", "middle")
      .style("font-size", function(d) {
        return d.size + "px";
      })
      .style("font-family", "Impact")
      .style("fill", function(d, i) { return fill(i); })
      .attr("text-anchor", "middle")
      .on("click", function(d) {
        window.location.href = '/Technology:' + d.text;
      })
      .attr("transform", function(d) {
        return "translate(" + [d.x, d.y] + ")rotate(" + d.rotate + ")";
      })
      .text(function(d) { return d.text; });
    }

  });

</script>
