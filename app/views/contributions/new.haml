%h1 Create new contribution

= form_tag('/contribute/create', :id => 'create_contribution', :method => :post) do

  = label_tag "Url to repository"
  = select(:contrb_repo_url, nil, @user_github_repos)

  = label_tag "Title of contribution"
  %input{:name => 'contrb_title', :placeholder => 'Obvious'}

  = label_tag "Description for contribution"
  %textarea{:name => 'contrb_description', :placeholder => 'Not obvious'}

  = label_tag "Folder in repo"
  %input{:name => 'contrb_folder', :placeholder => 'Not obvious'}

  %br/
  %button{:type => "submit", :class => "btn-large btn btn-success"}
    Create contribution
