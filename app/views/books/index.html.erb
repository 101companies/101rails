<h2>Books</h2>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.url %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= link_to('Create Index', create_index_book_path(book), method: :post) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path, class: 'btn btn-success' %>
